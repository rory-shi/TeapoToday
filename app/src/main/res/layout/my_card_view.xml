<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@color/colorBackground"
        android:elevation="0dp">
        <ImageView
            android:id="@+id/iv_in_cv"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:src="@drawable/default_img"
            android:elevation="15dp"/>
        <TextView
            android:id="@+id/tv_date_card"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/iv_in_cv"
            android:layout_alignBottom="@id/iv_in_cv"
            android:layout_marginBottom="10dp"
            android:background="#3f3e3e"
            android:gravity="center"
            android:textStyle="bold"
            android:text="4月13日\n三月初七"
            android:elevation="15dp"/>
        <TextView
            android:id="@+id/tv_title_in_cv"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:text="这是一段茶壶标题示例介绍内容"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textStyle="bold"

            android:layout_marginLeft="16dp"
            android:layout_below="@id/iv_in_cv"
            android:elevation="15dp"/>
        <TextView
            android:id="@+id/tv_content_in_cv"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:text="这是一段茶壶内容示例介绍内容"
            android:gravity="center_vertical"
            android:textSize="12sp"

            android:layout_marginLeft="16dp"
            android:layout_below="@id/tv_title_in_cv"
            android:elevation="15dp" />
        <ImageView
            android:id="@+id/fav_in_cv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_favorite_border"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:elevation="18dp"
            />
