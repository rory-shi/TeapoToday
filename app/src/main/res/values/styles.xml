<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <item name="android:actionModeBackground">@color/colorToolBar</item>
        <item name="android:actionModeCloseDrawable">@drawable/back</item>
        <item name="android:actionBarStyle">@style/DiyActionBarStyle</item>
    </style>

    <style name="DiyActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/colorToolBar</item>
    </style>
    
    
</resources>


